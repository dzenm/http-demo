<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/weather_recycler_bg"
        tools:context="com.din.testhttp.weather.WeatherActivity">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/MaterialLightBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:textColor="@color/MaterialLightBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/high"
            android:layout_below="@+id/date"
            android:padding="5dp"
            android:textColor="@color/MaterialLightBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/high"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@color/MaterialLightBlack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fengxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/low"
            android:layout_toRightOf="@+id/type"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:textColor="@color/MaterialLightBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fengli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/date"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textColor="@color/MaterialLightBlack"
            android:textSize="16sp" />
    </RelativeLayout>
</layout>